# Server configuration
NODE_ENV=development
PORT=5000

# MongoDB connection
MONGO_URI=mongodb://localhost:27017/solar-insight-explorer

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Google Sunroof API
GOOGLE_SUNROOF_API_URL=https://solar.googleapis.com/v1
GOOGLE_SUNROOF_API_KEY=your_google_sunroof_api_key

# PVWatts API
PVWATTS_API_URL=https://developer.nrel.gov/api/pvwatts/v6
PVWATTS_API_KEY=your_pvwatts_api_key

# SREC Trade API
SREC_TRADE_API_URL=https://api.srectrade.com/v1
SREC_TRADE_API_KEY=your_srec_trade_api_key

# File upload limits
MAX_FILE_SIZE=10485760  # 10MB in bytes 